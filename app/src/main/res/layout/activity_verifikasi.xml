<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verifikasi"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_satu"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"/>


   <EditText
       android:layout_width="320dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="200dp"
       android:layout_gravity="center"/>

    <Button
        android:id="@+id/Verifikasi"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Verifikasi"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:background="@drawable/tepi3"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum dapat kode verifikasi?"
        android:textSize="15dp"
        android:textColor="@color/birudasar"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/KirimUlangKode"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Kirim Ulang Kode"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/tepi4"
        android:textColor="#000000"
        />


</LinearLayout>