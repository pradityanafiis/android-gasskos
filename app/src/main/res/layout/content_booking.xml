<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BookingActivity"
    tools:showIn="@layout/activity_booking">

    <TextView
        android:id="@+id/textViewTipeKamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIPE KAMAR"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/textViewHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="HARGA KAMAR"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewTipeKamar"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:text="Tanggal Check In"
        android:textColor="@color/colorPrimaryDark2"
        android:textStyle="bold"
        android:layout_below="@id/textViewHarga"
        />

    <EditText
        android:id="@+id/tanggalMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:layout_toRightOf="@id/textView4"
        android:layout_below="@id/textViewHarga"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Durasi Menginap"
        android:textColor="@color/colorPrimaryDark2"
        android:textStyle="bold"
        android:layout_below="@id/tanggalMasuk"/>

    <EditText
        android:id="@+id/editTextDurasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tanggalMasuk"
        android:layout_toRightOf="@id/textView5"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/buttonPesanKamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tepi8"
        android:layout_marginTop="10dp"
        android:text="pesan kamar sekarang"
        android:textColor="#ffffff"
        android:layout_below="@id/editTextDurasi"/>

    <Button
        android:id="@+id/datePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/tepi8"
        android:text="Pilih Tanggal"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/tanggalMasuk"
        android:layout_below="@id/textViewHarga"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>