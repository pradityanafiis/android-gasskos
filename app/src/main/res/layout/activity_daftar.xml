<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GassKos - Daftar"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/birudasar"/>

    <EditText
        android:id="@+id/editTextName"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/birudasar"
        android:hint="Nama"
        android:hyphenationFrequency="normal"
        android:inputType="textCapWords"
        android:textColorLink="@color/colorPrimaryDark2"
        android:textCursorDrawable="@color/birudasar" />

    <EditText
        android:id="@+id/editTextEmail"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/birudasar"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorLink="@color/colorPrimaryDark2"
        android:textCursorDrawable="@color/birudasar" />

    <EditText
        android:id="@+id/editTextPassword"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/birudasar"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorLink="@color/colorPrimaryDark2"
        android:textCursorDrawable="@color/birudasar" />

    <EditText
        android:id="@+id/editTextRetypePassword"
        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/birudasar"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:textColorLink="@color/colorPrimaryDark2"
        android:textCursorDrawable="@color/birudasar" />

    <Button
        android:id="@+id/buttonRegistrasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/tepi"
        android:text="Registrasi"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah punya akun? Login"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/birudasar"/>

</LinearLayout>